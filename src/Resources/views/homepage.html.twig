{% extends 'layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Recently added projects</h1>
    </div>

    {% for project in projects %}
        <h2><a href="{{ path('project_show', { "id": project.id }) }}">{{ project.name }}</a></h2>
        <p>{{ project.description_html|raw }}</p>
        <p><a href="{{ path('project_show', { "id": project.id }) }}#comments">
        {% if project.comments == 0 %}
            No comments
        {% elseif project.comments == 1 %}
            1 comment so far
        {% else %}
            {{ project.comments }} comments
        {% endif %}
        </a></p>
    {% endfor %}

{% endblock %}
